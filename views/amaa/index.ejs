                    }
                });
            })

            $('.ocinput').submit(function(e) {
                e.preventDefault()
                let t = $(this).children('.cmipct')
                let comment = $(t).val()
                t = $(this).closest('.post-container')
                let pid = $(t).attr("pid")
                $.ajax({
                    type: "POST",
                    url: "/amaa/post/comment",
                    data: {
                        pid: pid,
                        comment: comment
                    },
                    success: (res) => {
                        console.log(res)
                    }
                });
            })
        });
