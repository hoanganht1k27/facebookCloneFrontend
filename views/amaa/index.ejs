    <script>
        $(document).ready(function () {
            $('#create-post-show').click(function (e) { 
                e.preventDefault();
                $('#create-post-bg').show()
                $('.create-post-container').show()
            });
            
            $('#create-post-bg').click(function (e) { 
                e.preventDefault();
                $(this).hide()
                $('.create-post-container').hide()
            });

            $('.love').click(function(e) {
                e.preventDefault()
                let t = $(this).closest('.post-container')
                let pid = $(t).attr('pid')
                $.ajax({
                    type: "POST",
                    url: "/amaa/post/like",
                    data: {
                        pid: pid,
                        type: 1
                    },
                    success: (res) => {
                        console.log(res)
                    }
                });
            })

            $('.haha').click(function(e) {
                e.preventDefault()
                let t = $(this).closest('.post-container')
